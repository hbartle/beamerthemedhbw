\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{dhbw}[1][]
{
	\vskip1cm%
	
	\begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle} 
	
	\begin{tikzpicture}
	
		\useasboundingbox[fill=white](0,0) rectangle(\the\paperwidth,1.2);
	
		
		\fill[dh_red_dark] (0,0) rectangle(\the\paperwidth,0.5);
	
		\ifx\insertframesubtitle\@empty%
			{\node[anchor=west, black,font=\large] at (3.2,0.61){\insertframetitle};}
		\else%
			{\node[anchor= west, black,font=\large] at (3.2,0.81){\insertframetitle};%
			\node[anchor= west, black,font=\small] at (3.2,0.41){\insertframesubtitle};}%
		\fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

\mode<all>